pipeline {
    agent any

    parameters {
         string(name: 'tomcat_dev', defaultValue: '34.205.133.152', description: 'Staging Server')
         string(name: 'tomcat_prod', defaultValue: '44.203.228.5', description: 'Production Server')
    }

    triggers {
         pollSCM('* * * * *')
     }
    tools {
        maven 'localMaven'
    }
stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "scp -o StrictHostKeyChecking=no -i /home/jitender/Downloads/tomcat-de.pem **/target/*.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat/webapps"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                        sh "scp -o StrictHostKeyChecking=no -i /home/jitender/Downloads/tomcat-de.pem **/target/*.war ec2-user@${params.tomcat_prod}:/var/lib/tomcat/webapps"
                    }
                }
            }
        }
    }
}